<h2>
  List
</h2>
<div class="row">
  {{#each this.model as |library|}}
    <div class="col-md-4">
      <div class="panel panel-default library-item">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{library.name}}
          </h3>
        </div>
        <div class="panel-body">
          <p>
            Address:
            {{library.address}}
          </p>
          <p>
            Phone:
            {{library.phone}}
          </p>
        </div>
        <div class="panel-footer text-right">
          <LinkTo
            @route="libraries.edit"
            @model={{library.id}}
            class="btn btn-success btn-xs"
          >
            Edit
          </LinkTo>
          <button
            type="button"
            class="btn btn-danger btn-xs"
            {{on 'click' (fn this.deleteLibrary library.id)}}
          >
            Delete
          </button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
