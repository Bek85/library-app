{{page-title 'Edit'}}
<h2>
  Edit Library
</h2>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <Input
        @type="text"
        @value={{this.model.name}}
        class="form-control"
        placeholder="The name of the Library"
      />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">
      Address
    </label>
    <div class="col-sm-10">
      <Input
        @type="text"
        @value={{this.model.address}}
        class="form-control"
        placeholder="The address of the library"
      />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">
      Phone
    </label>
    <div class="col-sm-10">
      <Input
        @type="text"
        @value={{this.model.phone}}
        class="form-control"
        placeholder="The phone number of the library"
      />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button
        type="submit"
        class="btn btn-primary"
        {{on 'click' (fn this.saveLibrary this.model)}}
      >
        Save changes
      </button>
    </div>
  </div>
</div>
{{outlet}}
