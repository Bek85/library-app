<h2>
  Add a new local Library
</h2>
<div class="row">
  <div class="col-md-6">
    <LibraryItemForm
      @item={{this.model}}
      @buttonLabel="Add to Library List"
      @handleClick={{this.saveLibrary}}
    />
  </div>
  <div class="col-md-4">
    <LibraryItem @item={{this.model}}>
      <br />
    </LibraryItem>
  </div>
</div>
